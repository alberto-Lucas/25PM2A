<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAnimacoes.MainPage">
    <StackLayout>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Image x:Name="imgTeste"
                   Source="imgglobe.png"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   HeightRequest="100"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal"
                     HorizontalOptions="Center"
                     VerticalOptions="Center">
            <Button Text="Girar Direita"
                    Clicked="btnDireita_Clicked"/>
            <Button Text="Girar Esquerda"
                    Clicked="btnEsquerda_Clicked"/>
            <Button Text="Girar Vertical"
                    Clicked="btnVertical_Clicked"/>
            <Button Text="Girar Horizontal"
                    Clicked="btnHorizontal_Clicked"/>
            <Button Text="ZOOM +"
                    Clicked="btnZoomMais_Clicked"/>
            <Button Text="ZOOM -"
                    Clicked="btnZoomMenos_Clicked"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
